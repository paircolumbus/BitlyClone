<header>
  <div class="navbar navbar-default">
    <%= link_to "Joe's Bitly Clone", root_path, id: "logo" %>
    <ul class="nav nav-pills">

      <% if current_user != nil %>

        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Links <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "New Link", new_url_path %></li>
            <li class="divider"></li>
            <li><%= link_to "My Links", mylinks_path %></li>
            <li><%= link_to "All Links", urls_path %></li>
          </ul>
        </li>

        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            User <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "Profile", current_user %></li>
            <li><%= link_to "Edit Profile", edit_user_path(current_user) %></li>
            <li><%= link_to "List of Users", users_path %></li>
            <li class="divider"></li>
            <li><%= link_to "Log out", logout_path, method: :delete %></li>
          </ul>
        </li>

        <li id="loginIdentifier"style="padding: 10px 30px 0 0">
          <small>Logged in as: <%= full_name(current_user) %></small>
        </li>

      <% end %>

    </ul>
  </div>
</header>