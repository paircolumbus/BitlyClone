<%= form_for(@session) do |f| %>
    <% if @session.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@session.errors.count, "error") %> prohibited this session from being started:</h2>

            <ul>
                <% @session.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="field">
        <%= f.label 'Login' %><br>
        <%= f.text_field :transient_login %>
    </div>
    <div class="password">
        <%= f.label 'Password' %><br>
        <%= f.text_field :transient_password %>
    </div>
    <div class="actions">
        <%= f.submit 'Start Session' %>
    </div>
<% end %>
