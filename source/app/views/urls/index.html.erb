<h1>Listing Urls</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @urls.each do |url| %>
      <tr>
        <td><%= link_to root_url + url.unique_key, url.unique_key %></td>
        <td><%= url.address %></td>
        <td><%= url.click_count %></td>
        <td><%= link_to 'Edit', edit_url_path(url) %></td>
        <td><%= link_to 'Destroy', url, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% if @urls.empty? %>
      <p> There are no urls </p>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Url', new_url_path %>
