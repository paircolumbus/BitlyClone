<%= form_for @url do |f| %>
  <% if @url.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@url.errors.count, "error") %> prohibited this url from being saved:
      </h2>
      <ul>
        <% @url.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :full, 'URL' %>:
    <%= f.text_field :full %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

